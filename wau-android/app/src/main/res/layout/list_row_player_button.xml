<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp">

    <ToggleButton
        android:id="@+id/btn_list_row_player_button_select_player"
        android:layout_width="wrap_content"
        android:layout_height="54dp"
        android:background="@drawable/selector_player_1"
        android:maxWidth="150dp"
        android:textOff=""
        android:textOn=""
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_list_row_player_button_nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="5dp"
        android:elevation="50dp"
        android:textSize="18dp"
        android:text="xegami"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@id/btn_list_row_player_button_select_player"
        app:layout_constraintLeft_toLeftOf="@id/btn_list_row_player_button_select_player"
        app:layout_constraintRight_toRightOf="@id/btn_list_row_player_button_select_player"
        app:layout_constraintTop_toTopOf="@id/btn_list_row_player_button_select_player" />

</androidx.constraintlayout.widget.ConstraintLayout>


