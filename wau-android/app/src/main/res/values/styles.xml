<resources>
    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:textViewStyle">@style/textViews</item>
        <item name="editTextStyle">@style/editTexts</item>
        <item name="android:radioButtonStyle">@style/radioButtons</item>
        <item name="android:soundEffectsEnabled">false</item>
    </style>

    <style name="textViews" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/helvetica</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:shadowDx">3</item>
        <item name="android:shadowDy">4</item>
        <item name="android:shadowRadius">1</item>
        <item name="android:shadowColor">@color/text_shadow</item>
    </style>

    <style name="editTexts" parent="Widget.AppCompat.EditText">
        <item name="fontFamily">@font/helvetica</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:shadowDx">3</item>
        <item name="android:shadowDy">4</item>
        <item name="android:shadowRadius">1</item>
        <item name="android:shadowColor">@color/text_shadow</item>
    </style>

    <style name="radioButtons" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="fontFamily">@font/helvetica</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:shadowDx">3</item>
        <item name="android:shadowDy">4</item>
        <item name="android:shadowRadius">1</item>
        <item name="android:shadowColor">@color/text_shadow</item>
    </style>
</resources>